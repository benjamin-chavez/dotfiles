#############################################################
# ~/.dotfiles/mac/Brewfile                                  #
#                                                           #
# List of packages to be installed / updated via Homebrew   #
# Usage: $ brew bundle --file ~/.dotfiles/mac/Brewfile      #
#############################################################

# Version Control
brew "git"          # Version control system
brew "gh"           # GitHub CLI for PRs, issues, etc.

# Editors
brew "neovim"       # Vim fork, modernized text editor

# CLI Tools
brew "bat"          # Syntax highlighting (better cat)
brew "duf"          # Disk usage stats (better df)
brew "ripgrep"      # Fast text search (better grep)
brew "thefuck"      # Auto-correct previous command

# Languages
brew "go"           # Go programming language

# Apps
cask "ghostty"      # GPU-accelerated terminal emulator
cask "raycast"      # Launcher and productivity tool
cask "visual-studio-code"  # Code editor